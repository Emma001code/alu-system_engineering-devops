#!/usr/bin/env bash
# Script to set up an Nginx server and configure a page redirection.

# Update package lists and install Nginx.
sudo apt-get -y update
sudo apt-get -y install nginx

# Create an index.html file with the text "Holberton School".
echo "Holberton School" | sudo tee /var/www/html/index.html

# Add a redirection rule to the default Nginx site configuration.
REDIRECT_URL="https://www.youtube.com/@yourbestsoftdev001/"
sudo sed -i "/listen 80 default_server/a rewrite ^/redirect_me $REDIRECT_URL permanent;" /etc/nginx/sites-available/default

# Restart the Nginx service to apply changes.
sudo systemctl restart nginx

