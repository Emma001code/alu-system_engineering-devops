#!/usr/bin/env bash
# Configure your Nginx server to have a custom 404 page that contains the string `Cecil n'est pas une page`

sudo apt-get update
sudo apt-get install -y nginx

# Create the custom 404 page with the correct string
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# Define the error page configuration with proper formatting
new_error_page=$'listen 80 default_server;\n\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}'

# Replace the listen directive in the Nginx config with the new configuration
sudo sed -i "s|listen 80 default_server;|$niew_error_page|" /etc/nginx/sites-enabled/default

# Test the configuration and restart Nginx
sudo nginx -t && sudo service nginx restart
